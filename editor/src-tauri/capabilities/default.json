{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:allow-app-write",
    "fs:allow-app-read",
    {
      "identifier": "fs:scope",
      "allow": [ {"path": "$APPDATA"}, {"path": "$APPDATA/**/*"} ]
    },
    "oauth:allow-start",
    "oauth:allow-cancel",
    "opener:default",
    "opener:allow-open-url",
    "keyring:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [ {"path": "$APPDATA/**/*"} ]
    }
  ]
}
